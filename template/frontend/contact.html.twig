
{% block body %}
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">

                    <h2>Contactez-moi</h2>
                    <hr />

                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form id="contact-form" action="/" method="post" role="form">

                    <div class="messages"></div>

                    <div class="controls">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form__field">
                                    <label for="form_name">Prénom *</label>
                                    <input id="form_name" type="text" value="{{ Params.name }}" name="name" class="form-control" placeholder="Votre prénom *" required="required" data-error="Prénom est obligatoire.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form__field">
                                    <label for="form_lastname">Nom *</label>
                                    <input id="form_lastname" type="text" value="{{ Params.surname }}" name="surname" class="form-control" placeholder="Votre nom *" required="required" data-error="Nom est obligatoire.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form__field">
                                    <label for="form_email">Email *</label>
                                    <input id="form_email" type="email" value="{{ Params.email }}" name="email" class="form-control" placeholder="Votre email *" required="required" data-error="Un email valide est obligatoire.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form__field">
                                    <label for="form_need">Motif de votre message *</label>
                                    <select id="form_need" name="need" value="{{ Params.need }}" class="form-control" required="required" data-error="Motif.">
                                        <option value=""></option>
                                        <option value="Demande d'information">Demande d'information</option>
                                        <option value="Demande de devis">Demande de devis</option>
                                        <option value="Demande de rendez-vous">Demande de rendez-vous</option>
                                        <option value="Autre">Autre</option>
                                    </select>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group form__field">
                                    <label for="form_message">Message *</label>
                                    <textarea id="form_message" name="message" value="{{ Params.message }}" class="form-control" placeholder="Votre message *" rows="4" required="required" data-error="Un message ?"></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12 form__field">
                                <label for="form_captcha"><img src="/captcha" /></label>
                                <input id="form_captcha" type="text" value="{{ Params.email }}" name="captcha" class="form-control" placeholder="Captcha *" required="required" data-error="Captcha est obligatoire.">
                            </div>
                            <div class="col-md-12">
                                <input type="hidden" name="action" value="sending" />
                                <input type="submit" class="btn btn-success btn-send" value="Envoyer" />
                                <input type="reset" class="btn btn-fail btn-reset" value="Reset"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p class="text-muted">
                                    <strong>*</strong> Ces champs sont obligatoires.
                                 </p>
                            </div>
                        </div>
                    </div>

                </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

