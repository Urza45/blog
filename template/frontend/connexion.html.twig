{% extends "base.html.twig" %}

{% block title %}Se connecter - S'enregistrer{% endblock %}

{% block body %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h3>Se connecter</h3>
                <hr />
                <form id="login-form" method="post" action="/signin" role="form">
                    <div class="controls">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="form_pseudo">Pseudo *</label>
                                    <input id="form_pseudo" type="text" value="{{ Params.surname }}" name="pseudo" class="form-control" placeholder="Votre pseudo *" required="required" data-error="Vous devez renseigner votre pseudo.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="form_password">Mot de passe *</label>
                                    <input id="form_password" type="password" value="{{ Params.password }}" name="password" class="form-control" placeholder="Votre mot de passe *" required="required" data-error="Vous devez renseigner votre mot de passe.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="hidden" name="action" value="connexion" />
                                <input type="submit" class="btn btn-success btn-send" value="Se connecter" />
                                <input type="reset" class="btn btn-fail btn-reset" value="Reset"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p class="text-muted">
                                    <strong>*</strong> Ces champs sont obligatoires.
                                </p>
                                <a href="/register" class="btn btn-primary">S'enregistrer</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <!-- Contact Form JavaScript 
    <script src="/js/jqBootstrapValidation.js"></script>
    <script src="/js/register.js"></script>-->
{% endblock %}