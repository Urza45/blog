{% extends "base.html.twig" %}

{% block body %}
<section class="admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Administration</h2>
                <hr>
            </div>
        </div>
        <div class="row text-center">
            <div class="btn-group-vertical col-lg-12 text-center">      
            {% if session.admin > 1 %}
                <a href="/admin/listcomments" class="btn btn-primary"><h2>Gestion des commentaires</h2></a><br/>
            {% endif %}
            {% if session.admin > 2 %}
                <a href="/admin/listpost" class="btn btn-primary"><h2>Gestion des Posts</h2></a><br/>
            {% endif %}
            {% if session.admin > 3 %}
                <a href="/admin/listuser" class="btn btn-primary"><h2>Gestion des utilisateurs</h2></a>
            {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}